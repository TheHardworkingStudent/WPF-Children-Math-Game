<Window x:Class="WPF_Math_Game_Outline.wndFinalScoresScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndFinalScoresScreen" Height="300" Width="300" >
    <Window.Background>
        <ImageBrush ImageSource="Images\emmanuel-ogun-interior-of-doomspire-composited.jpg" Stretch="UniformToFill">
        </ImageBrush>
    </Window.Background>
    <Canvas>
        <Label Content="Final Score" FontSize="20" FontWeight="Bold" Height="45" HorizontalAlignment="Left" Width="122" Canvas.Left="89" Canvas.Top="10" VerticalAlignment="Center" />
        <Label x:Name="ScoreNameLabel" Content="Name:" Canvas.Left="129" Canvas.Top="55" RenderTransformOrigin="0.395,-0.854" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="ScoreAgeLabel" Content="Age:" Canvas.Left="134" Canvas.Top="86" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="ScoreNumberCorrectAnswers" Content="Number correct answers:" Canvas.Left="80" Canvas.Top="117"/>
        <Label x:Name="ScoreNumberIncorrectAnswers" Content="Number incorrect answers:" Canvas.Left="75" Canvas.Top="148"/>
        <Label x:Name="ScoreTimeToComplete" Content="Time to complete:" Canvas.Left="97" Canvas.Top="179"/>
    </Canvas>
</Window>
